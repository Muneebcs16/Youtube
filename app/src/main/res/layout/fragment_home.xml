<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Complaints"
        android:textStyle="bold"
        android:drawableTop="@drawable/complaint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL COMPLAINTS"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/cubes"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/cornernew"
         android:gravity="center"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPEN COMPLAINTS"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:drawableRight="@drawable/checkprofile"
            android:textColor="@android:color/white"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
          android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/cornernew2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSED COMPLAINTS"
            android:textSize="18sp"
            android:drawableRight="@drawable/correct"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"

            />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Feedbacks"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-black"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:gravity="center"

            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/cornerfeedback"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POSITIVE FEEDBACKS"
                android:fontFamily="monospace"
                android:textSize="20sp"
                android:drawableRight="@drawable/like"
                android:textColor="@android:color/holo_green_dark"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/cornerfeedback"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEGITIVE FEEDBACKS"
                android:textSize="20sp"
                android:drawableRight="@drawable/dislike"
                android:fontFamily="monospace"
                android:textColor="@android:color/holo_red_dark"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/cornerfeedback"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENDING FEEDBACKS"
                android:fontFamily="monospace"
                android:textSize="20sp"
                android:drawableRight="@drawable/pending"
                android:textColor="@android:color/holo_orange_light"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:background="@drawable/cornerfeedback"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DROPPED COMPLAINTS"
                android:textSize="20sp"
                android:drawableRight="@drawable/drop"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</ScrollView>